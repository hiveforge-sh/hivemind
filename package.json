{
  "name": "@hiveforge/hivemind-mcp",
  "version": "2.6.0",
  "description": "MCP server for Obsidian worldbuilding vaults - provides AI tools with consistent canonical context",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "hivemind": "dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "icon.png",
    "gh-social-preview.png"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf dist",
    "prepare": "husky || true",
    "prepublishOnly": "npm run build",
    "commitlint": "commitlint --edit",
    "release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hiveforge-sh/hivemind.git"
  },
  "bugs": {
    "url": "https://github.com/hiveforge-sh/hivemind/issues"
  },
  "homepage": "https://github.com/hiveforge-sh/hivemind#readme",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "obsidian",
    "worldbuilding",
    "ai",
    "context",
    "knowledge-graph",
    "claude",
    "rag",
    "hybrid-search",
    "creative-writing",
    "fiction",
    "storytelling"
  ],
  "author": "Preston",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.13.2",
    "better-sqlite3": "^12.6.2",
    "chokidar": "^5.0.0",
    "clipboardy": "^5.1.0",
    "express": "^5.2.1",
    "gray-matter": "^4.0.3",
    "picocolors": "^1.1.1",
    "picomatch": "^4.0.3",
    "remark": "^15.0.1",
    "remark-wiki-link": "^2.0.1",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  },
  "overrides": {
    "undici": "^6.23.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/express": "^5.0.0",
    "@types/node": "^25.0.10",
    "@types/picomatch": "^4.0.2",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.18.0",
    "husky": "^9.1.7",
    "rimraf": "^6.0.1",
    "semantic-release": "^25.0.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.18"
  }
}
