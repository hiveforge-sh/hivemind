{
  "name": "@hiveforge/hivemind-mcp",
  "version": "0.1.0",
  "description": "MCP server for Obsidian worldbuilding vaults - provides AI tools with consistent canonical context",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "hivemind": "dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --passWithNoTests",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf dist",
    "prepare": "husky || true",
    "prepublishOnly": "npm run build",
    "commitlint": "commitlint --edit",
    "release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hiveforge-io/hivemind.git"
  },
  "bugs": {
    "url": "https://github.com/hiveforge-io/hivemind/issues"
  },
  "homepage": "https://github.com/hiveforge-io/hivemind#readme",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "obsidian",
    "worldbuilding",
    "ai",
    "context",
    "knowledge-graph",
    "claude",
    "rag",
    "hybrid-search",
    "creative-writing",
    "fiction",
    "storytelling"
  ],
  "author": "Preston",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "better-sqlite3": "^11.7.0",
    "chokidar": "^4.0.3",
    "express": "^4.21.2",
    "gray-matter": "^4.0.3",
    "remark": "^15.0.1",
    "remark-wiki-link": "^2.0.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "semantic-release": "^25.0.2",
    "typescript": "^5.7.2"
  }
}
